@using AjaxQuery.Models
@model Employee
@{
    ViewBag.Title = "Create Employee";
}
<script src="~/lib/jquery/dist/jquery-3.7.1.min.js">   </script>
<div>
        <h2>Create Employee</h2>
    <input type="text" id="txtName" placeholder="Enter Name" />
    <input type="text" id="txtEmail" placeholder="Enter Email" />
    <input type="text" id="txtPhone" placeholder="Enter Phone" />

    <input type="button" id="btn" value="Click">  </input>
</div>
<div>
    <label id="on">  </label>
</div>
<script type="text/javascript">
        $(document).ready(function () {
        $("#btn").click(function () {
            var emp = {
                Name: $("#txtName").val(),
                Email: $("#txtEmail").val(),
                Phone: $("#txtPhone").val()
            };
            $.ajax({
                type: "POST",
                url: "/Ajax/createEmployee",
                data: emp,
                dataType: "json",
                success: function (response) {
                    alert(response.name);
                    console.log(response);
                    $("#on").html(response.name);

                },
                error: function (req, status, error) {
                    alert(error);
                    console.log(error);
                }
            });
        });
    });
</script>